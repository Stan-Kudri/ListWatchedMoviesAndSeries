name: repository-builder

on:
  push:
    paths-ignore:
    - 'README.md'
    
  pull_request:    
    paths-ignore:
    - 'README.md'

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v2
      with:
        submodules: true
        fetch-depth: 0
        
    - name: Setup .NET
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: '6.0.x'
        
    - name: Restore dependencies
      run: dotnet restore "ListWatchedMoviesAndSeries"
      

    - name: Build
      run: dotnet build "ListWatchedMoviesAndSeries/ListWatchedMoviesAndSeries" --no-restore

    - name: Test
      run: dotnet test "ListWatchedMoviesAndSeries/TestUnitCore" --no-restore --verbosity normal
